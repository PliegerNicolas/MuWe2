<div class="jam-card swiper-slide">
  <div class="jam-card-left">
    <div class="jam-image">
      <%= image_tag jam.photo, width: "130px", height: "175px", secure: true %>
      <div class="jam-status">
        <% if jam.ongoing? %>
          <i class="fas fa-circle" style="color: #36B554"></i> <!-- Green -->
          <p style="color: #36B554"><%= jam.status.capitalize %></p>
        <% elsif jam.planned? %>
          <i class="fas fa-circle" style="color: #42ABE7"></i> <!-- Blue -->
          <p style="color: #42ABE7"><%= jam.status.capitalize %></p>
        <% else %>
          <i class="fas fa-circle" style="color: #7B7B7B"></i> <!-- Gray -->
          <p style="color: #7B7B7B"><%= jam.status.capitalize %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="jam-card-right">
    <div class="jam-address">
      <p><%= jam.address.street %>,</p><p> <%= jam.address.city %>,</p><p> <%= jam.address.country %></p>
    </div>
    <div class="jam-time">
      <p>From </p><p class="muwe-text"><%= jam.start_time.strftime("%H:%M") %></p><p> until </p><p class="muwe-text"><%= jam.end_time.strftime("%H:%M") %></p>
    </div>
    <div class="jam-host">
      <p>Host : </p><p class=""><%= link_to profile_path(jam.user.id) do %><%= jam.user.first_name %><% end %></p>
    </div>
    <div class="jam-participants">
      <p>Participants : </p><p class="muwe-text"><%= jam.participants.count %>/<%= jam.max_participants %></p>
    </div>
  </div>
</div>
