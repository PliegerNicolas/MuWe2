  <% if user_signed_in? && current_user.profile.privacy == false %>
    <div id="notice">
      <p>Yo this is a notice for you to give permission to saving your location in DB</p>
      <%= link_to permit_location_save_path, remote: true do %>
        <i class="fas fa-check"></i>
      <% end %>
      <%= link_to deny_location_save_path, remote: true do %>
        <i class="fas fa-times"></i>
      <% end %>
    </div>
  <% end %>
